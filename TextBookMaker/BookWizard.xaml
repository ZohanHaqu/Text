<Window x:Class="TextBookMaker.BookWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Book Wizard" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Book Name:" />
            <TextBox Name="BookNameTextBox" Margin="5" FontFamily="Tahoma" />

            <TextBlock Text="Enter Author Name:" />
            <TextBox Name="AuthorNameTextBox" Margin="5" FontFamily="Tahoma" />

            <TextBlock Text="Enter Book Description:" />
            <TextBox Name="BookDescriptionTextBox" Margin="5" FontFamily="Tahoma" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

            <Button Name="CreateBookButton" Content="Create Book" Click="CreateBookButton_Click" Margin="5" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>

