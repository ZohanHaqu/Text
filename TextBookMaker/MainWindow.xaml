<Window x:Class="TextBookMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextBook Maker" Height="450" Width="800">
    <Grid>
        <!-- Menu Bar -->
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New Book" Click="NewBook_Click"/>
                <MenuItem Header="Open" Click="OpenCommand"/>
                <!-- New Menu Item -->
                <MenuItem Header="Save As" Click="SaveAsCommand"/>
                <MenuItem Header="About" Click="About_Click"/>
                <!-- New Menu Item -->
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Bold" Click="Bold_Click"/>
                <MenuItem Header="Italic" Click="Italic_Click"/>
                <MenuItem Header="Underline" Click="Underline_Click"/>
                <MenuItem Header="Center" Click="Center_Click"/>
            </MenuItem>
        </Menu>

        <!-- RichTextBox for text editing -->
        <RichTextBox Name="BookRichTextBox" Margin="10,19,10,10" />
    </Grid>
</Window>

